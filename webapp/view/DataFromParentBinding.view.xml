<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="sap.training.demo.odata.v4.controller.DataFromParentBinding" xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>parentBindingPageTitle}" class="sapUiSizeCompact">
				<content>
					<l:VerticalLayout>
						<l:content>
							<Table id="peopleList"  mode="SingleSelectMaster"
								selectionChange="onPersonChange" growing="true" growingThreshold="5"
								items="{ path: '/People',
								         parameters: {
							                             $expand: { Trips: {
																			  $select: ['Name', 'Description', 'StartsAt', 'EndsAt']
																		    }
																  }
													  }
								       }"
							>
								<headerToolbar>
									<Toolbar>
										<Title id="peopleTitle" text="{i18n>peopleListTitle}" titleStyle="H2"/>
									</Toolbar>
								</headerToolbar>
								<columns>
									<Column id="firstNameColumn">
										<Text text="{i18n>firstNameLabelText}"/>
									</Column>
									<Column id="lastNameColumn">
										<Text text="{i18n>lastNameLabelText}"/>
									</Column>
									<Column id="ageColumn">
										<Text text="{i18n>ageLabelText}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{FirstName}"/>
											<Text text="{LastName}"/>
											<Text text="{Age}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
							<Table id="tripList" items="{Trips}" growing="true" growingThreshold="5">
								<headerToolbar>
									<Toolbar>
										<Title id="tripsTitle" text="{i18n>tripListTitle}" titleStyle="H2"/>
									</Toolbar>
								</headerToolbar>
								<columns>
									<Column id="tripNameColumn">
										<Text text="{i18n>tripNameLabelText}"/>
									</Column>
									<Column id="tripDescColumn">
										<Text text="{i18n>tripDescLabelText}"/>
									</Column>
									<Column id="tripStartsAtColumn">
										<Text text="{i18n>tripStartsAtLabelText}"/>
									</Column>
									<Column id="tripEndsAtColumn">
										<Text text="{i18n>tripEndsAtLabelText}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{Name}"/>
											<Text text="{Description}"/>
											<Text text="{StartsAt}"/>
											<Text text="{EndsAt}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</l:content>
					</l:VerticalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>